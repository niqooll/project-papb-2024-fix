<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvHargaOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Harga"
        app:layout_constraintStart_toEndOf="@+id/ivGambarT"
        app:layout_constraintTop_toBottomOf="@+id/tvLokasiOrder" />

    <TextView
        android:id="@+id/tvJudulOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Judul"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivGambarT"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLokasiOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Lokasi"
        app:layout_constraintStart_toEndOf="@+id/ivGambarT"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulOrder" />

    <TextView
        android:id="@+id/tvQuantityOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="Quantity"
        app:layout_constraintStart_toEndOf="@+id/ivGambarT"
        app:layout_constraintTop_toBottomOf="@+id/tvHargaOrder" />

    <ImageView
        android:id="@+id/ivGambarT"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jc1" />

    <Button
        android:id="@+id/btRefund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#21529C"
        android:text="Refund"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
